<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/img/icon.ico" type="image/x-icon" />
    <title>Meta</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <img
      src="/img/meta.svg"
      style="width: 100%; height: 100px; margin-top: 30px"
      alt="meta"
    />
    <form class="mx-auto" action="/user/forget/<%= token %>" method="post">
      <div class="mx-auto">
        <input
          type="password"
          class="input1"
          maxlength="20"
          placeholder="Enter your new password"
        />
      </div>

      <div class="mx-auto">
        <input
          type="password"
          class="input2"
          maxlength="20"
          name="password"
          placeholder="Enter your Conform password"
        />
        <i class="fas fa-eye-slash" id="eye"></i>
      </div>
      <button type="submit" class="btn" disabled>Click</button>
    </form>

    <div class="footer">
      <div>
        Â© 2021 Meta. All rights reserved.
      </div>
    </div>



    <script
      src="https://code.jquery.com/jquery-3.6.0.slim.min.js"
      integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI="
      crossorigin="anonymous"
    ></script>

    <script>
      $("body").on("click", "#eye", function () {
        $(this).toggleClass("fa-eye fa-eye-slash");

        $(".input2").attr("type") === "password"
          ? $(".input2").attr("type", "text")
          : $(".input2").attr("type", "password");
      });

      $(document).ready(function () {
        $(".btn").prop("disabled", true);

        $(".input1, .input2").keyup(function () {
          if ($(".input1").val() != "" && $(".input2").val() != "") {
            if ($(".input1").val() === $(".input2").val()) {
              $(".btn").prop("disabled", false);
            } else {
              $(".btn").prop("disabled", true);
            }
          } else {
            $(".btn").prop("disabled", true);
          }
        });
      });
    </script>
  </body>
</html>
